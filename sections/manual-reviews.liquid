<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
<link
  rel="preload"
  href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css"
  as="style">
<link
  rel="preload"
  href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css"
  as="style">

<section
  data-section-id="{{ section.id }}"
  data-section-type="manual-reviews"
  class="section manual-reviews-section">
  <div class="photo-introduction_wrapper page-width">
    <div class="photo-introduction_header">
      <div class="hearts_wrapper">
        <img data-src="{{ 'big-heart.png' | asset_url }}" class="lazyload">
        <img data-src="{{ 'big-heart.png' | asset_url }}" class="lazyload">
        <img data-src="{{ 'big-heart.png' | asset_url }}" class="lazyload">
        <img data-src="{{ 'big-heart.png' | asset_url }}" class="lazyload">
        <img data-src="{{ 'big-heart.png' | asset_url }}" class="lazyload">
      </div>
      {% if section.settings.title != blank %}
        <h4 class="photo-introduction_heading_text">{{ section.settings.title }}</h4>
      {% endif %}
    </div>
    <div class="photo-introduction_contents">
      {% for block in section.blocks %}
        <div class="photo-introduction_contents_column">
          <div class="photo-introduction_image_wrapper">
            {% if block.settings.review_img %}
              <img data-src="{{ block.settings.review_img | img_url: '500x500'}}" class="lazyload">
            {% endif %}
          </div>
          <h3 class="type-heading-1">{{ block.settings.review_content }}</h3>
          <div class="photo_intro_main_contents">{{ block.settings.review_author }}</div>
          <div class="reviews_product">{{ block.settings.review_product }}</div>
        </div>
      {% endfor %}
    </div>
  </div>

</section>

<style>
  .slick-arrow {
    z-index: 1;
  }

  .slick-next:before {
    position: relative;
    top: -130px;
    content: url("{{ 'right-arrow.png' | asset_url }}");
  }

  .slick-prev:before {
    position: relative;
    top: -130px;
    content: url("{{ 'left-arrow.png' | asset_url }}");
  }
</style>

{% schema %}
  {
    "name": "Manual Reviews",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Over 2 Million Happy Customers"
      }, {
        "type": "header",
        "content": "Section style"
      }, {
        "type": "checkbox",
        "id": "outline",
        "label": "Outline section",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Reviews",
        "settings": [
          {
            "type": "image_picker",
            "id": "review_img",
            "label": "Review Image"
          }, {
            "type": "richtext",
            "id": "review_content",
            "label": "Review Content"
          }, {
            "type": "text",
            "id": "review_author",
            "label": "Author"
          }, {
            "type": "text",
            "id": "review_product",
            "label": "Reviewed Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Manual Reviews"
      }
    ]
  }
{% endschema %}

<script>
  $('.photo-introduction_contents').slick({
    dots: false,
    speed: 500,
    slidesToShow: 3,
    slidesToScroll: 1,
    arrows: true,
    responsive: [
      {
        breakpoint: 600,
        settings: {
          centerMode: true,
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }, {
        breakpoint: 400,
        settings: {
          centerMode: true,
          arrows: true,
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });
</script>